{
  "name": "playwright-hybrid-e2e",
  "author": "Tyson illi",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "report": "npx playwright show-report",
    "chrome-debug": "cross-env npx playwright test --config=./configs/playwright.config.ts --project=chromeUI --debug",
    "chrome-ui": "cross-env npx playwright test --config=./configs/playwright.config.ts --project=chromeUI",
    "chrome-visual": "cross-env npx playwright test --config=./configs/playwright.config.ts --project=chromeUI --grep @visual",
    "chrome-access-wip": "npx playwright test --project=chromeUI --grep @accessibility",
    "ios-debug": "cross-env npx playwright test --config=./configs/playwright.config.ts --project=iosUI --debug",
    "ios-ui": "cross-env npx playwright test --config=./configs/playwright.config.ts --project=iosUI",
    "ios-visual": "cross-env npx playwright test --config=./configs/playwright.config.ts --project=iosUI --grep @visual",
    "ios-lambdatest": "wdio run ./configs/wdio.ios.config.ts",
    "android-debug": "npx playwright test --project=android_Dev_UI --debug",
    "android-visual": "wdio run ./tests/e2e/ui/mobile/androidVisual.conf.ts --spec",
    "android-lambdatest": "wdio run ./configs/wdio.android.config.ts",
    "ui-mode": "npx playwright test --ui",
    "codegen-desktop": "npx playwright codegen https://practice.expandtesting.com/notes/app",
    "codegen-mobile": "npx playwright codegen --device=\"iPhone 14\" https://practice.expandtesting.com/notes/app"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@lambdatest/playwright-driver": "^1.0.6",
    "@lambdatest/smartui-cli": "^3.0.12",
    "@lambdatest/wdio-driver": "^1.0.6",
    "@playwright/test": "^1.56.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.12",
    "@types/webdriverio": "^5.0.0",
    "@wdio/cli": "^8.39.0",
    "@wdio/json-reporter": "^8.39.0",
    "@wdio/junit-reporter": "^8.39.0",
    "@wdio/local-runner": "^8.38.2",
    "@wdio/mocha-framework": "^8.39.0",
    "@wdio/spec-reporter": "^8.38.2",
    "chai": "^5.1.1",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.0",
    "junit-report-merger": "^7.0.0",
    "mocha": "^10.6.0",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "wdio-lambdatest-service": "^2.1.3",
    "webdriverio": "^8.39.1"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.9.0",
    "ajv": "^8.17.1",
    "date-fns": "^3.6.0",
    "mocha-webdriver": "^0.3.3",
    "selenium-webdriver": "^4.21.0",
    "test-results-reporter": "^1.0.19"
  }
}
